      <TextField fx:id="toCurrencyField" layoutX="54.0" layoutY="213.0" promptText="To Currency (e.g., BDT)" />
      <Button layoutX="204.0" layoutY="272.0" mnemonicParsing="false" onAction="#handleConvertCurrency" text="Convert" />
      <Label fx:id="resultLabel" layoutX="313.0" layoutY="137.0" text="Converted Amount:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
