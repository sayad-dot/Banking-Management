<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: F1E5D1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.campuswallet.CurrencyConverterController">
